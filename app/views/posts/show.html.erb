<div class="posts-list">
  <div class="mb-4">
    <%= render partial: "post", object: @post %>
  </div>

  <% if @post.join_requests.size > 0 %>
    <div class="f3 bold mb-2">Interested</div>

    <div class="box pl-3 pr-3" data-test="join_requests">
      <%= render @post.join_requests.includes(:user).sort_by{ |r| r.user.name } %>
    </div>
  <% end %>
</div>

