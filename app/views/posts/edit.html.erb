<div class="container">
  <h2 class="center-align">Edit post details</h2>

  <hr class="thick">

  <% @post.errors.full_messages.each do |error| %>
    <div><%= error %></div>
  <% end %>

  <%= form_for @post, html: { class: "form" } do |form| %>
    <%= render partial: "form", object: form %>

    <div class="submit-button">
      <%= form.submit "Save", class: "action-button primary" %>
    </div>
  <% end %>
</div>
