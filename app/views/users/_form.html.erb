<% @user.errors.full_messages.map do |error| %>
  <div><%= error %></div>
<% end %>

<%= form_for @user do |form| %>
<div class="form-field">
  <%= form.label :name, class: "label" %>
  <%= form.text_field :name, class: "text-input" %>
</div>

<div class="form-field">
  <%= form.label :email, class: "label" %>
  <%= form.text_field :email, type: "email", class: "text-input" %>
</div>

<div class="form-field">
  <%= form.label :password, class: "label" %>
  <%= form.password_field :password, class: "text-input" %>
</div>

<div class="submit-field">
  <%= form.submit "Sign up", class: "action-button primary expand" %>
</div>
<% end %>
