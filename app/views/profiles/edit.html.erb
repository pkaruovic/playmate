<% @user.errors.full_messages.each do |error| %>
  <div><%= error %></div>
<% end %>

<div class="container">
  <h2 class="center-align">Edit profile</h2>

  <hr class="thick">

  <%= form_for @user, url: profile_path(@user), html: { class: "form" } do |f| %>
    <div class="form-field">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "text-input" %>
    </div>

    <div class="form-field">
      <%= f.label :birth_date, class: "label" %>
      <%= f.date_field :birth_date, class: "text-input" %>
    </div>

    <div class="form-field">
      <%= f.label :gender, class: "label" %>
      <%= f.select :gender, User.genders, {}, { class: "text-input" } %>
    </div>

    <div class="form-field">
      <%= f.label :biography, class: "label" %>
      <%= f.text_area :biography, class: "text-input" %>
    </div>

    <div class="submit-button">
      <%= f.submit "Save", class: "action-button primary" %>
    </div>
  <% end %>
</div>
