<div class="container">
  <h2 class="center-align">Edit profile</h2>

  <hr class="thick">

  <%= form_for @user_profile, url: profile_path(@user), method: :patch, html: { class: "form" } do |f| %>
    <div class="form-field">
      <%= label_for f, :name, class: "label" %>
      <%= f.text_field :name, class: "text-input" %>
    </div>

    <div class="form-field">
      <%= label_for f, :email, class: "label" %>
      <%= f.text_field :email, type: :email, class: "text-input" %>
    </div>

    <div class="form-field">
      <%= label_for f, :birth_date, class: "label" %>
      <div class="d-flex">
        <%= select_month @user_profile.month_of_birth, { prefix: "user_profile", field_name: "month_of_birth", include_blank: true }, { class: "text-input mr-3" } %>
        <%= f.number_field :day_of_birth, class: "text-input mr-3", placeholder: "Day" %>
        <%= f.number_field :year_of_birth, class: "text-input", placeholder: "Year" %>
      </div>
    </div>

    <div class="form-field">
      <%= label_for f, :biography, class: "label" %>
      <%= f.text_area :biography, class: "text-input", rows: 4 %>
    </div>

    <div class="submit-button">
      <%= f.submit "Save", class: "action-button primary" %>
    </div>
  <% end %>
</div>
